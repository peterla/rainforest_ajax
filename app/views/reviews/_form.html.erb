<h4>New Review</h4>

<%= form_for([product, review], :remote => true) do |f| %>

  <div id="review-form-errors">
    <%= render :partial => "/products/review_form_errors" %>
  </div>

  <div class="field">
    <%= f.label :comment %><br/>
    <%= f.text_area :comment %>
  </div>
  <div class="actions">
    <%= f.submit "Create Review blah", id: 'new_review' %>
  </div>

<% end %>
