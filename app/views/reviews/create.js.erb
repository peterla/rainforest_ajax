<% if @review.errors.present? %>
  $("#review-form-errors").html("<%= escape_javascript(render(:partial => '/products/review_form_errors')) %>");
<% else %>
  $("#review-form-errors").html("");
  $("#review-list").append("<%= escape_javascript(render partial: 'products/review', locals: { review: @review }) %>");
  $(".review").last().css("background-color", "tomato");
  $(".review").last().css("color", "white");
  $(".review").last().animate({ backgroundColor: "#ffffff", color: "black" }, 5000, 'swing');
  // $("#review-list").html("#<%= escape_javascript(render(:partial => '/products/reviews')) %>");
  $("#new_review")[0].reset();
<% end %>
