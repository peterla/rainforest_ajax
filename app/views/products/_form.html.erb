<%= form_for @product do |p| %>
<% if @review.errors.present? %>
  <% @review.errors.full_messages.each do |error| %>
    <div class="alert">
      <%= error %>
    </div>
  <% end %>
<% end %>
  <div>
  <%= p.label :name %>
  <%= p.text_field :name %>
  </div>
  <div>
  <%= p.label :description %>
  <%= p.text_field :description %>
  </div>
  <div>
  <%= p.label :price_in_cents %>
  <%= p.text_field :price_in_cents %>
  </div>
  <div>
  <%= p.submit %>
  </div>
<% end %>
